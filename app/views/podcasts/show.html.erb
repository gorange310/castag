<div>
  <%= image_tag( @podcast.cover , alt: "Cover Image") %>
  <h1><%= @podcast.title %></h1>
  <h2> by <%= @podcast.host %></h2>
  <p><%= sanitize(@podcast.description) %></p>
</div>
<hr>

<h2>Episode List</h2>
<% @episodes.each do |episode| %>
<hr>
<div class = "episode">
  <%= episode.published_at %>
  <%= episode.minutes %>
  <h2 class="episode-title" >
    <%= episode.title %>
  </h2>
  <p class="episode-note" >
    <%= sanitize(episode.note) %>
  </p>
</div>
<% end %>
