<%= form_tag search_episodes_path, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :keyword, params[:keyword], placeholder: "Enter Keyword...", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
      <%= "Search" %>
      <% end %>
    </div>
  </div>
  <% end %>